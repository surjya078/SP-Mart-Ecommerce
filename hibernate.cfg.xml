<?xml version="1.0"?>
<!DOCTYPE hibernate-configuration PUBLIC 
	"-//Hibernate/Hibernate Configuration DTD 3.0//EN"
	"http://hibernate.sourceforge.net/hibernate-configuration-3.0.dtd">

<hibernate-configuration>
	<session-factory>
		<property name="connection.driver_class">com.mysql.cj.jdbc.Driver</property>
		<property name="connection.url">jdbc:mysql://localhost:3306/mycart</property>
		<property name="connection.username">root</property>
		<property name="connection.password">hapi2001@</property>
		<property name="dialect">org.hibernate.dialect.MySQL8Dialect</property>
		<property name="hbm2ddl.auto">update</property>
		<property name="show_sql">true</property>
		<mapping class="com.mycompany.ecommerce.entities.User"></mapping>
		<mapping class="com.mycompany.ecommerce.entities.Category"></mapping>
		<mapping class="com.mycompany.ecommerce.entities.Product"></mapping>

	</session-factory>
</hibernate-configuration>

